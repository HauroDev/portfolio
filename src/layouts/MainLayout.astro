---
import { basics } from "@cv";

const { name } = basics;
---

---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{name}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: Arial, Helvetica, sans-serif;
    background: #333;
    letter-spacing: -0.025rem;
  }

  body,
  figure,
  ul {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    list-style: none;
  }

  *,
  *::before,
  *::after {
    color: #ccc;
    font-weight: bold;
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
  p {
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }
</style>
